<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <sys:Double x:Key="IconSize">24</sys:Double>
    <sys:Double x:Key="GlobalTextSize">16</sys:Double>
    <sys:Double x:Key="GlobalBigTextSize">22</sys:Double>

    <Style x:Key="ButtonIcon" TargetType="Image">
        <Setter Property="Width" Value="{DynamicResource IconSize}"/>
        <Setter Property="Height" Value="{DynamicResource IconSize}"/>
        <Setter Property="Margin" Value="5,5,10,5"/>
    </Style>
    
    <Style x:Key="ButtonCaption" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="{DynamicResource GlobalTextSize}"/>
    </Style>
    <Style x:Key="ButtonWithIcon" TargetType="Button">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="{DynamicResource GlobalTextSize}"/>
        <Setter Property="Padding" Value="10,5,10,5"/>
        <Setter Property="Margin" Value="10"/>
    </Style>
    <Style x:Key="ButtonWithoutIcon" TargetType="Button">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="{DynamicResource GlobalTextSize}"/>
        <Setter Property="Padding" Value="10,5,10,5"/>
    </Style>


</ResourceDictionary>